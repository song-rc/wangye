/* pages/index/index.wxss */
/* 轮播图 */
.swiper{
  width:100%;
  height:370rpx;
  border: 1rpx solid #cfcfda;
  background-color: #cfcfda;
  position: fixed;
  z-index: 1;
}
.swiper swiper{
  width:94%;
  height:320rpx;
  margin:25rpx 20rpx;
  /* border:1rpx solid #30bffc; */
}
.swiper swiper image{
  width:100%;
  height:100%;
}
/* 选项 */
.select{
  position:fixed;
  top:370rpx;
  width:100%;
  height:100rpx;
  /* border: 1rpx solid #30bffc; */
  background-color: #fff;
  display: flex;
  margin-bottom: 5rpx;
  z-index: 2;
}
.select_box{
  width:50%;
  height:100%;
  border-right:1rpx solid #928989;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 550;
  font-size: 45rpx;
}
.xhx{
  border-bottom: 5rpx solid #30bffc;
}
.sw{
  width: 100%;
  /* height:670rpx; */
  position:absolute;
  top:475rpx; 
  /* border:1rpx solid black; */
}
.xq_box{
  position: relative;
  width:100%;
  height:200rpx;
  border:1rpx solid rgb(255, 254, 254);
  background-color: #fff;
  margin-bottom:10rpx;
}
.box_cnt{
  width:94%;
  height:160rpx;
  margin:20rpx;
  /* border:1rpx solid black; */
  display: flex;
}
.cnt_left{
  width:50%;
  height:160rpx;
}
.cnt_left .bcolor{
  width:86%;
  height:140rpx;
  margin: 15rpx;
  /* border:1rpx solid black; */
  background-color: #cfcfda;
}
.bcolor image{
  width:88%;
  height:120rpx;
  margin:10rpx 20rpx;
}
.cnt_right{
  width:50%;
  height:140rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color:rgb(102, 95, 95);
}
.cnt_right .h3{
  color:black;
  font-size:34rpx;
  font-weight: 700;
}
.cnt_right text{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.xx_box{
  width: 49%;
  height:350rpx;
  /* border:1rpx solid black; */
}
.white{
  width:90%;
  height:300rpx;
  background-color: #fff;
  margin:23rpx 18rpx;
}
.gray{
  width:90%;
  height:260rpx;
  background-color: #cfcfda;
  position:relative;
  top:20rpx;
  left:18rpx;
}
.gray image{
  width:90%;
  height:220rpx;
  margin:20rpx 15rpx;
}
.gray .bagr{
  position: absolute;
  bottom:0;
  width:100%;
  height:80rpx;
  background-color:rgba(102, 95, 95, 0.603);
  font-size:28rpx;
